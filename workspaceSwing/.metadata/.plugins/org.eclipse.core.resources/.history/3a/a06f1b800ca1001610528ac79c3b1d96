package rajeshwari.codes.thread.codelab;

public class Ball {
	private int velStep = 1;
	// fields to maintain left top corner of the moving ball.
	private int x;
	private int y;
	private int vx;
	private int vy;

	public Ball() {
		x = 0;
		y = 0;
		vx = 1;
		vy = 1;
	}

	public void moveBall() {
		int newX = x + vx;
		int newY = y + vy;
		if (newX + 30 > getWidth()) {
			vx = -1 * velStep;
		}
		if (newY + 30 > getHeight()) {
			vy = -1 * velStep;
		}
		if (newX < 0) {
			vx = velStep;
		}
		if (newY < 0) {
			vy = velStep;
		}
		x = x + vx;
		y = y + vy;
	}
}
