package rajeshwari.codes.tictactoe;

public class Board {
	private char data[][] = new char[3][3];

	public Board() {
		for(int i=0;i<3;i++){
			for (int j=0;j<3;j++) {
				data[i][j] = '-';
			}
		}
	}

	public void showBoard(){
		for(int i=0;i<3;i++){
			String rowLine = "";
			for (int j=0;j<3;j++){
				rowLine+=data[i][j];
			}
			System.out.println(rowLine);
		}
	}

	public boolean updateBoard(int x,int y) {
		if (data[x][y] == '-') {
			data[x][y]='1';
			return true;
		}
		return false;
	}
}
